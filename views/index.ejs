<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Home Page</title>

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link rel="stylesheet" href="/styles/index.css" type="text/css" />
    <link rel="stylesheet" href="/styles/nav.css" type="text/css" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Bangers&family=Cinzel+Decorative:wght@400;700;900&family=Old+Standard+TT:ital,wght@0,400;0,700;1,400&family=Zilla+Slab+Highlight:wght@400;700&display=swap" rel="stylesheet">

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
  </head>

  <body>
    <%- include('header') %>
    <article>
    <h1>Add a Task</h1>
    <form action='/user/new_tasks' method="POST" class="new-task">
      <textarea name="text" id="task-text" placeholder="What do you need to do?"></textarea>
      <div>
        <button type="submit" class="add" >Add</button>
      </div>
      </form>
    </article>
      <div class='categories'>
        <section>
        <h2>🎥 Movies</h2>
        <% for(let task in Movies) { %>
          <p><a href="/users/tasks/<%= Movies[task].id %>"><%= Movies[task].title %></a></p>
        <% } %>
      </section>
      <section>
        <h2>📖 Books</h2>
        <% for(let task in Books) { %>
            <p><a href="/users/tasks/<%= Books[task].id %>"><%= Books[task].title %></a></p>
          <% } %>

      </section>
        <section>
        <h2> 🛒 Products</h2>
        <% for(let task in Products) { %>
            <p><a href="/users/tasks/<%= Products[task].id %>"><%= Products[task].title %></a></p>
          <% } %>

      </section>
      <section>
        <h2> 🍽 Restaurants</h2>
        <% for(let task in Restaurants) { %>
            <p><a href="/users/tasks/<%= Restaurants[task].id %>"><%= Restaurants[task].title %></a></p>
          <% } %>

      </section>
      </div>
  </body>
</html>
